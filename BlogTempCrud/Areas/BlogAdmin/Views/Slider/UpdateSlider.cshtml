@model Slider
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Areas/BlogAdmin/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateSlider</h2>

<div class="row-fluid">
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon"> <i class="icon-align-justify"></i> </span>
            <h5>Slider Əlavə edin</h5>
        </div>
        <div class="widget-content nopadding">
            <form asp-controller="Slider" asp-action="UpdateSlider" enctype="multipart/form-data" method="post" class="form-horizontal">
                <div class="control-group">
                    <label class="control-label">Başlıq :</label>
                    <div class="controls">
                        <input asp-for="Title" type="text" class="span11" name="Title" @*value="@Model.Title"*@ />
                        <span asp-validation-for="Title" class="text-danger span11"></span>
                        <input type="hidden" name="Id" value="@Model.Id" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Açıqlama :</label>
                    <div class="controls">
                        <input asp-for="Description" type="text" class="span11" name="Description" value="@Model.Description" />
                        <span asp-validation-for="Description" class="text-danger span11"></span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">
                        Slider şəkili
                    </label>
                    <div class="controls">
                        <input asp-for="Image" type="file" name="Image" style="display:block" />
                        <span asp-validation-for="Image" style="margin-left:22.7px" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>

</div>